---
import Award from "../award/award.vue";
import Service from "../Service/service.vue";
---

<div
    class="w-full min-h-screen flex items-center justify-center relative py-20 px-4"
>
    <!-- Main Grid Layout -->
    <div
        class="grid grid-cols-1 lg:grid-cols-4 w-full max-w-7xl gap-12 place-items-center z-10"
    >
        <!-- Left Panel: Services -->
        <div
            class="w-full h-64 lg:h-96 flex justify-center lg:justify-start order-2 lg:order-1 opacity-0 animate-fade-in-up"
            style="animation-delay: 0.2s;"
        >
            <Service client:load />
        </div>

        <!-- Center Panel: Hero Text -->
        <div
            class="col-span-1 lg:col-span-2 flex flex-col items-center justify-center text-center order-1 lg:order-2"
        >
            <div class="relative mb-6">
                <h1
                    class="text-6xl md:text-8xl lg:text-9xl font-display font-bold text-white tracking-tighter text-glow"
                >
                    Zzyzx Labs
                </h1>
                <div
                    class="absolute -inset-1 blur-2xl bg-primary/20 -z-10 rounded-full"
                >
                </div>
            </div>

            <div class="relative overflow-hidden">
                <p
                    class="text-lg md:text-2xl font-mono text-text-muted border-r-2 border-primary pr-2 animate-typewriter whitespace-nowrap overflow-hidden"
                >
                    EXPLORING THE LAST FRONTIER
                </p>
            </div>
        </div>

        <!-- Right Panel: Awards -->
        <div
            class="w-full h-64 lg:h-96 flex justify-center lg:justify-end order-3 lg:order-3 opacity-0 animate-fade-in-up"
            style="animation-delay: 0.4s;"
        >
            <Award client:load />
        </div>
    </div>

    <!-- Background Gradient Fade -->
    <div
        class="absolute bottom-0 left-0 w-full h-64 bg-gradient-to-t from-bg-base to-transparent pointer-events-none"
    >
    </div>

    <style>
        .animate-fade-in-up {
            animation: fadeInUp 1s ease-out forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-typewriter {
            animation:
                typing 3.5s steps(30, end) forwards,
                blink-caret 0.75s step-end infinite;
            width: 0;
        }

        @keyframes typing {
            from {
                width: 0;
            }
            to {
                width: 100%;
            }
        }

        @keyframes blink-caret {
            from,
            to {
                border-color: transparent;
            }
            50% {
                border-color: rgb(var(--color-primary));
            }
        }
    </style>
</div>
