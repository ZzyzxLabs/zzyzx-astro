<nav
    id="main-navbar"
    class="fixed top-0 left-0 w-full z-[100] transition-transform duration-300"
>
    <div
        class="mx-auto max-w-7xl px-6 py-4 flex items-center justify-between backdrop-blur-xl bg-black/40 border-b border-white/10 rounded-b-2xl"
    >
        <!-- Logo -->
        <a href="#home" class="flex items-center gap-2 group">
            <span
                class="font-display text-xl md:text-2xl font-bold text-white tracking-wider group-hover:text-primary transition-colors"
            >
                Zzyzx Labs
            </span>
        </a>

        <!-- Desktop Nav -->
        <div class="hidden md:flex items-center gap-8">
            <a href="#home" class="nav-link">Home</a>
            <a href="#projects" class="nav-link">Projects</a>
            <a href="#about" class="nav-link">About</a>
            <a href="#members" class="nav-link">Members</a>
            <a href="mailto:contact@zzyzx.com" class="nav-cta">Contact Us</a>
        </div>

        <!-- Mobile Hamburger -->
        <button
            id="nav-toggle"
            class="md:hidden flex flex-col gap-1.5 p-2 group"
            aria-label="Toggle navigation"
        >
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>
    </div>

    <!-- Mobile Menu -->
    <div
        id="mobile-menu"
        class="hidden md:hidden backdrop-blur-xl bg-black/80 border-b border-white/10"
    >
        <div class="flex flex-col items-center gap-6 py-8">
            <a href="#home" class="mobile-nav-link">Home</a>
            <a href="#projects" class="mobile-nav-link">Projects</a>
            <a href="#about" class="mobile-nav-link">About</a>
            <a href="#members" class="mobile-nav-link">Members</a>
            <a href="mailto:contact@zzyzx.com" class="nav-cta">Contact Us</a>
        </div>
    </div>
</nav>

<script>
    // Hide/show navbar on scroll direction
    let lastScrollY = window.scrollY;
    let ticking = false;
    const navbar = document.getElementById("main-navbar");

    window.addEventListener("scroll", () => {
        if (!ticking) {
            window.requestAnimationFrame(() => {
                const currentScrollY = window.scrollY;
                if (currentScrollY > lastScrollY && currentScrollY > 80) {
                    navbar?.classList.add("-translate-y-full");
                } else {
                    navbar?.classList.remove("-translate-y-full");
                }
                lastScrollY = currentScrollY;
                ticking = false;
            });
            ticking = true;
        }
    });

    // Mobile menu toggle
    const toggle = document.getElementById("nav-toggle");
    const mobileMenu = document.getElementById("mobile-menu");

    toggle?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });

    // Close mobile menu on link click
    mobileMenu?.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
            mobileMenu?.classList.add("hidden");
        });
    });
</script>

<style>
    .nav-link {
        font-family: var(--font-body);
        font-size: 0.875rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.7);
        transition:
            color 0.2s,
            text-shadow 0.3s;
        text-decoration: none;
    }
    .nav-link:hover {
        color: rgb(var(--color-primary));
        text-shadow: 0 0 12px rgba(var(--color-primary), 0.4);
    }

    .mobile-nav-link {
        font-family: var(--font-heading);
        font-size: 1.25rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.8);
        transition: color 0.2s;
        text-decoration: none;
    }
    .mobile-nav-link:hover {
        color: rgb(var(--color-primary));
    }

    .nav-cta {
        font-size: 0.875rem;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        padding: 0.5rem 1.25rem;
        border-radius: 9999px;
        border: 1px solid rgba(var(--color-primary), 0.4);
        color: rgb(var(--color-primary));
        transition: all 0.3s;
        text-decoration: none;
    }
    .nav-cta:hover {
        background: rgba(var(--color-primary), 0.15);
        border-color: rgb(var(--color-primary));
        box-shadow: 0 0 20px rgba(var(--color-primary), 0.2);
    }

    .hamburger-line {
        display: block;
        width: 24px;
        height: 2px;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 2px;
        transition: all 0.3s;
    }
    #nav-toggle:hover .hamburger-line {
        background: rgb(var(--color-primary));
    }
</style>
