---
import "../styles/global.css";
import Footer from "../components/footer/footer";
import Navbar from "../components/Navbar.astro";
import "@fontsource/inter";
import "@fontsource/space-grotesk";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Zzyzx Labs | Future Tech Frontiers",
	description = "Zzyzx Labs is exploring the latest frontiers in technology, from AI to blockchain and beyond.",
} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO -->
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://zzyzxlabs.com" />
		<meta property="og:image" content="/og-image.jpg" />
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer client:load />
		<script>
			import "../scripts/scroll-animations";
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
	}
</style>
